<% provide :page_title, @page.title %>

<h1><%= @page.title %></h1>
<p><%= get_formatted_text_page(@page.body) %></p>

  <p class="edit-button">
    <%= link_to 'Добавить подстраницу', new_page_page_path(params[:path], params[:id]), class: 'btn btn-primary btn-sm' %>
  </p>
  <p class="edit-button">
    <%= link_to 'Редактировать', edit_page_path(params[:path], params[:id]), class: 'btn btn-warning btn-sm' %>
  </p>
  <%= button_to 'Удалить', page_path(params[:path], params[:id]),
                method: :delete,
                class: 'btn btn-danger btn-sm' %>

<br>

<h3>Дерево подстраниц</h3>
<%= render_page_hierarchy(@page.children, "#{@page.name}/") if @page.children.present? %>